{
  "stylelint.enable": true,
  "css.validate": true,
  "scss.validate": true,
  "stylelint.validate": [
    "css",
    "scss"
  ],
  "folderTemplates.fileTemplates": {
    "React function component": [
      "import { PropsWithChildren } from 'react';",
      "import { getClassNames } from 'shared/utils/classNames';",
      "import style from './<FTName>.module.scss';",
      "",
      "type <FTName>Props = PropsWithChildren<{",
      "  className?: string;",
      "}>;",
      "",
      "export const <FTName> = (props: <FTName>Props) => {",
      "  const { className } = props;",
      "",
      "  return (",
      "    <div className={getClassNames(style.<FTName | camelCase>, {}, [className])}>",
      "      $0",
      "    <\/div>",
      "  );",
      "};",
      ""
    ],
    "Scss module": [
      ".<FTName | camelCase> {",
			"",
			"}",
      ""
    ]
  },
  "folderTemplates.structures": [
    {
      "name": "Create React Component",
      "omitParentDirectory": true,
      "structure": [
        {
          "fileName": "<FTName>/<FTName>.tsx",
          "template": "React function component"
        },
        {
          "fileName": "<FTName>/<FTName>.module.scss",
          "template": "Scss module"
        }
      ]
    }
  ]
}
